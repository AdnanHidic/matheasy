<Window x:Class="MathEasy.src.Rendering.PreviewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Document preview" Height="423" Width="562" WindowState="Normal" xmlns:my="clr-namespace:MathEasy.src.Rendering" Icon="/MathEasy;component/images/AppIcon.ico">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="243*" />
        </Grid.RowDefinitions>
        <my:PreviewBox Grid.Row="1" HorizontalAlignment="Stretch" x:Name="pbox" VerticalAlignment="Stretch" BorderThickness="1" BorderBrush="Black" />
        <Button Click="RefreshContent"  Height="30" HorizontalAlignment="Left" Name="button1" VerticalAlignment="Top" Width="34" ToolTip="Refresh content">
            <Image Source="/MathEasy;component/images/Refresh.ico" Stretch="Fill"></Image>
        </Button>
    </Grid>
</Window>
